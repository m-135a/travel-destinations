<%- include ('../partials/header.ejs'); -%>

<div class="container mt-5" style="width: 50%; margin: auto;">
    <h1 style="text-align: center;">Update Destination</h1>
    <div class="mb-2 pt-4">
        <form action="/destinations/<%=destination._id%>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="destination[name]" value="<%=destination.name%>">
            </div>
            <div class="form-group">
              <label for="cost">Average cost per day</label>
              <input type="number" class="form-control" id="cost" name="destination[cost]" min="0.01" step="0.01" value="<%=destination.cost%>">
            </div>
            <div class="form-group">
              <label for="location">Location</label>
              <input class="form-control" type="text" name="destination[location]" id="location" value="<%= destination.location %>">
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="text" class="form-control" id="image" name="destination[image]" value="<%=destination.image%>">
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" name="destination[description]"><%=destination.description%></textarea>
            </div>
            <button type="submit" class="btn btn-dark btn-block">Submit</button>
          </form>
    </div>
</div>

<%- include ('../partials/footer.ejs'); -%>